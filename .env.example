# إعدادات البيئة لبرنامج إدارة مخزون محل الهواتف

# بيئة التطبيق (development, production, testing)
APP_ENV=development

# المفتاح السري للتطبيق (يجب تغييره في الإنتاج)
SECRET_KEY=your-secret-key-here-change-in-production

# رابط قاعدة البيانات
# للتطوير: sqlite:///instance/phone_store.db
# للإنتاج: postgresql://username:password@host:port/database
DATABASE_URL=sqlite:///instance/phone_store.db

# مفتاح API لـ Groq (اختياري - للذكاء الاصطناعي)
GROQ_API_KEY=your-groq-api-key-here

# إعدادات الخادم
HOST=0.0.0.0
PORT=5000

# إعدادات الأمان
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# إعدادات التطبيق
DEBUG=true
SQLALCHEMY_ECHO=false

# إعدادات التخزين المؤقت
CACHE_TIMEOUT=300

# إعدادات الإشعارات
NOTIFICATIONS_ENABLED=true
NOTIFICATIONS_CHECK_INTERVAL=3600

# إعدادات النسخ الاحتياطي
AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24