{
  "name": "phone-store-manager",
  "version": "1.0.0",
  "description": "برنامج إدارة مخزون محل الهواتف - تطبيق سطح المكتب",
  "main": "electron/main.js",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "start": "npm run electron",
    "dev": "npm run electron-dev"
  },
  "keywords": [
    "phone",
    "store",
    "inventory",
    "management",
    "arabic",
    "electron",
    "flask"
  ],
  "author": "Phone Store Manager",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.phonestore.manager",
    "productName": "برنامج إدارة مخزون محل الهواتف",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "templates/**/*",
      "static/**/*",
      "*.py",
      "*.db",
      "requirements.txt",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "برنامج إدارة مخزون محل الهواتف"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/assets/icon.png"
    }
  }
}
